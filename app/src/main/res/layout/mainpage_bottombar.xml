<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#95eeeeee"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/id_tab_home"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/id_tab_home_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#00000000"
            android:clickable="false"
            app:srcCompat="@drawable/btn_home_sel" />

        <TextView
            android:id="@+id/text_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首页"
            android:enabled="true"
            android:textColor="@drawable/txt_home_color_sel"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_all_goods"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/id_all_goods_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#00000000"
            android:clickable="false"
            app:srcCompat="@drawable/btn_alls_sel" />

        <TextView
            android:id="@+id/text_all_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所有"
            android:enabled="false"
            android:textColor="@drawable/txt_home_color_sel"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_tab_newest"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/id_tab_newest_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#00000000"
            android:clickable="false"
            app:srcCompat="@drawable/btn_found_sel" />

        <TextView
            android:id="@+id/text_newest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发现"
            android:enabled="false"
            android:textColor="@drawable/txt_home_color_sel"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_tab_cart"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/id_tab_cart_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#00000000"
            android:clickable="false"
            app:srcCompat="@drawable/btn_goods_sel" />

        <TextView
            android:id="@+id/text_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购物车"
            android:enabled="false"
            android:textColor="@drawable/txt_home_color_sel"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_tab_me"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/id_tab_me_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#00000000"
            android:clickable="false"
            app:srcCompat="@drawable/btn_my_sel" />

        <TextView
            android:id="@+id/text_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的"
            android:enabled="false"
            android:textColor="@drawable/txt_home_color_sel"
            android:textSize="12dp" />
    </LinearLayout>

</LinearLayout>