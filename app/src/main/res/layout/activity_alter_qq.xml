<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/setting_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/qq_title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/title_bar_bg_white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/qq_return"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:padding="10dp"
            app:srcCompat="@drawable/button_left_arrow"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="修改qq"
            android:textColor="#555555"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/qq_finsh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:padding="12dp"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:text="完成"
            android:textColor="#FF7F24" />

    </RelativeLayout>
    <com.team.azusa.yiyuan.widget.ClearEditText
    android:id="@+id/qq_ET"
    android:layout_width="fill_parent"
    android:layout_height="44dp"
    android:padding="10dp"
    android:textSize="15sp"
    android:inputType="number"
    android:textColorHint="#cccccc"
    android:hint="请输入QQ"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="20dp"
    android:layout_below="@id/qq_title"
    android:background="@drawable/login_layoutshape" />
</RelativeLayout>