<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="4">

    <LinearLayout
        android:id="@+id/hongbao"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_white2gray_sel"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:clickable="false"
            app:srcCompat="@drawable/hongbao" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="红包"
            android:textColor="@drawable/txt_home_color_sel"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/jifen"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_white2gray_sel"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:clickable="false"
            app:srcCompat="@drawable/jifen" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="积分"
            android:textColor="@drawable/txt_home_color_sel"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chongzhi"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_white2gray_sel"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:clickable="false"
            app:srcCompat="@drawable/chongzhi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="充值"
            android:textColor="@drawable/txt_home_color_sel"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/shaidan"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_white2gray_sel"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:clickable="false"
            app:srcCompat="@drawable/shaidan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="晒单"
            android:textColor="@drawable/txt_home_color_sel"
            android:textSize="12dp" />
    </LinearLayout>
</LinearLayout>