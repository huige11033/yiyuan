<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/search_rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#90eeeeee">

        <TextView
            android:id="@+id/search_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:id="@+id/fgx"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/search_rl2"
        android:background="#dddddd" />

    <com.team.azusa.yiyuan.widget.PulluptoRefreshListview
        android:id="@+id/search_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fgx"
        android:dividerHeight="0.5dp" />

    <FrameLayout
        android:id="@+id/search_floatbtn"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="32dp"
        android:descendantFocusability="blocksDescendants">

        <ImageView
            android:id="@+id/car_img"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:srcCompat="@drawable/cart_circle_bg" />
    </FrameLayout>

</RelativeLayout>